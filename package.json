{
  "name": "voicebox-app",
  "version": "1.0.0",
  "main": "main.js",
  "build": {
    "appId": "com.voicebox.tts",
    "productName": "VoiceBox",
    "files": [
      "**/*",
      "!node_modules/.cache/**"
    ],
    "extraResources": [
    {
        "from": "VoiceBoxBackend.exe",
        "to": "VoiceBoxBackend.exe"
    }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron": "37.1.0"
  },
  "devDependencies": {
    "electron-builder": "26.0.17"
  }
}
